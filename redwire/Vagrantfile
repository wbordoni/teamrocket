  config.vm.define "nexus" do |nexus|
    nexus.vm.box = "centos/7"
    nexus.vm.hostname = "nexus.m2i.form"
    nexus.vm.network "public_network", ip: "10.222.222.2"
    nexus.vm.provider "virtualbox" do |v|
